* {
	box-sizing: border-box;
	margin: 0;
	padding: 0;
}

html {
	scroll-behavior: smooth;
}

body {
	background-color: #edf0f1;
}

li, a, button {
	font-weight: 500;
	font-size: 18px;
	color: #edf0f1;
	text-decoration: none;
	font-family: arial;
}

header {
	top: 0;
	width: 100%;
	position: fixed;
	float: top;
	background-color: #24252a;
	align-items: center;
	padding: 30px 10%;
}

.logo{
	float: left;
	cursor: pointer;
	
}

.company {
	position: relative;
	margin-left: 25%;
	height: 90px;
	width: 160px;
}

.top {
	width: 100%;
	display: block;
	padding-bottom: 20px;
	height: 100px;
}

.navbar{
	list-style: none;
}

.navbar li {
	display: inline-block;
	padding: 0px 10px;
}

.navbar li a {
	margin-right: auto;
	margin-left: auto;
	transition: all 0.3s ease 0s;
}

.navbar li a:hover {
	color: #0088a9;
}

button {
	display: block;
	float: right;
	padding: 9px 25px;
	background-color: rgba(0,136,169,1);
	border: none;
	border-radius: 50px;
	cursor: pointer;
	transition: all 0.3s ease 0s;
	margin-left: auto;
	margin-top: 3%;
}

button:hover {
	background-color: rgba(0,136,169,0.5);
}






.service-area {
	display: flex;
	font-family: arial;
	background-color: rgba(0,136,169,1);
	color: white;
}

contact-area {
	display: flex;
	font-family: Verdana, sans-serif;
	padding-top: 50px;
	margin: 0;
}

.contacts {
	padding-top: 100px;
	font-family: arial;
	margin-left: 15%;
}

h1 {font-size: 50px;}

h1, h2 {
	padding-top: 20px;
	padding-bottom: 20px;
}

.text-part {
	text-align: justify;
	margin-left: 15%;
	margin-bottom: 10%;
	margin-right: 10%;
}

p {
	line-height: 30px;
}

.text-area {
	font-size: 30px;
	text-align: justified;
}






.banner-area {
	text-align: center;
	font-family: gothic-bold;
	margin-top: 170px;
	background-image: url(img/smol.gif);
	width: 100%;
	height: 450px;
	background-repeat: no-repeat;
	-webkit-background-size: cover;
	background-size: cover;
	font-size: 50px;
	color: black;
	}


.blurr {
	text-align: center;
	border: hidden 1px;
	margin-left: 25%;
	margin-right: 25%;
	background-color: rgb(21, 43, 43,0.7);
	border-radius: 3%;
	padding: 40px;
}

.three {
	color: #00d9ff;
	font-size: 80px;	
}

.five {
	font-size: 40px;
	color: #edf0f1;
	padding-top: 85px;
	padding-bottom: 20px;
}






.full {
	display: block;
}

.left {
	cursor: pointer;
	float: left;
	width: 40%;
	height: 35vh;
	padding: 10px;
	margin-bottom: 80px;
	margin-left: 8%;
	margin-right: auto;
}

.right {
	cursor: pointer;
	float: right;
	width: 40%;
	height: 35vh;
	padding: 10px;
	margin-bottom: 80px;
	margin-right: 8%;
	margin-left: auto;
}

.left:hover {
	border: solid 10px rgba(0,136,169,0.8);
}

.right:hover {
	border: solid 10px rgba(0,136,169,0.8);
}

.min {
	display: none;
	width: 100%;
	height: 600;
}



@media (max-width: 970px) {
	
	.blurr {
		padding: 30px;
	}
	
	.three {
		font-size: 45px;
	}
	
	.five {
		padding-top: 50px;
		font-size: 30px;
		padding-bottom: 0;
	}
	
	.left {
		width: 40%;
		height: 20vh;
	}
	.right {
		width: 40%;
		height: 20vh;
	}

}

@media (max-width: 500px) {
	
	.full {
		display: none;
	}
	
	.min {
		display: block;
	}
	
	.con {
		padding-left: 30px;
		padding-right: 30px;
		align-items: center;
		margin-left: auto;
		margin-right: auto;
		margin-top: 5%;
		width: 100%;
		height: 40vh;
	}
	
	.navbar {
		display: flex;
		text-align: center;
	}
	
	.logo {
		height: 45px;
		width: 45px;
	}
	
	.company {
		margin-left: 15%;
		height: 45px;
		width: 80px;
	}
	
	li, a, button {
		font-size: 12px;
	}
	
	p {
		font-size: 12px;
	}
	
	h1 {
		font-size: 20px;
	}
	
	h2 {
		font-size: 18px;
	}
}

@media (max-width: 400px) {
		.con {
		margin-left: 15%;
		margin-right: 15%;
		padding: 0;
		pointer: cursor;
		width: 70%;
		height: 20vh;
	}

	.con:hover {
		border: solid 10px rgba(0,136,169,0.8);
	}

}